{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,              // ✅ key for avoiding type clashes
    "types": ["node"]                  // ✅ only include server-side types
  },
  "include": ["src"]
}
